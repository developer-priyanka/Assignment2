<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="my.assignment.applicationtwo.MainActivity"
    android:background="@android:color/background_dark"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="40dp">
    <TextView
        android:text="Enter Card Balance ($)"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:layout_weight="3"
        android:id="@+id/textView" />

    <EditText
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:inputType="textPersonName|numberDecimal"
        android:background="@android:color/darker_gray"
        android:ems="10"
        android:id="@+id/editText"/>
              </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="40dp">

    <TextView
        android:text="Enter Yeary Interest Rate (%)"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:layout_weight="3"
        android:textSize="18sp"
        android:id="@+id/textView1" />

    <EditText
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:inputType="textPersonName|numberDecimal"
        android:background="@android:color/darker_gray"

        android:ems="10"
        android:id="@+id/editText1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="40dp">

        <TextView
            android:text="Enter Minimum Payment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:layout_weight="3"
            android:id="@+id/textView2"/>
        <EditText
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:inputType="textPersonName|numberDecimal"
            android:background="@android:color/darker_gray"
            android:ems="10"
            android:id="@+id/editText2" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="40dp">

    <TextView
        android:text="Final Card Balance ($)"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:layout_weight="3"
        android:id="@+id/textView3" />
        <EditText
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:inputType="textPersonName|numberDecimal"
            android:background="@android:color/darker_gray"
            android:ems="10"
            android:id="@+id/editText3" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="40dp">

        <TextView
            android:text="Months Remaining"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:id="@+id/textView4"
            android:layout_weight="3" />
        <EditText
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:inputType="textPersonName|number"
            android:background="@android:color/darker_gray"
            android:ems="10"
            android:id="@+id/editText4" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="40dp">


        <TextView
            android:text="Interest Paid Will Be ($)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:id="@+id/textView5"
            android:layout_weight="3" />
        <EditText
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:inputType="textPersonName|numberDecimal"
            android:background="@android:color/darker_gray"
            android:ems="10"
            android:id="@+id/editText5" />
    </LinearLayout>


        <Button
            android:text="COMPUTE"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/button" />

    <Button
    android:text="CLEAR"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/button1"/>


</LinearLayout>